      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "WEB",
      "script": "web.js"
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": [
        "10.116.75.148"
      ],
      "ref": "origin/master",
      "repo": "git@github.com:dolphineor/modern-java-web-scaffold.git",
      "path": "/var/www/production",
